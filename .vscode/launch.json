{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "target",
            "description": "Select the target to debug",
            "default": "heap_tracker",
            "type": "pickString",
            "options": [
                {
                    "label": "hello_world",
                    "value": "semihosting/hello_world/hello_world"
                }
            ]
        }
    ],
    "configurations": [
        {
            "name": "Pico Debug (Cortex-Debug)",
            "cwd": "${env:PICO_SDK_TOOLS_PATH}/openocd/scripts",
            "executable": "${workspaceFolder}/build/examples/${input:target}.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "serverpath": "${env:PICO_SDK_TOOLS_PATH}/openocd/openocd",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "device": "RP2350",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2350.cfg"
            ],
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2350/hardware_regs/RP2350.svd",
            "runToEntryPoint": "main",
            // Fix for no_flash binaries, where monitor reset halt doesn't do what is expected
            // Also works fine for flash binaries
            "overrideLaunchCommands": [
                "monitor reset init",
                "load \"${workspaceFolder}/build/examples/${input:target}.elf\""
            ],
            "openOCDLaunchCommands": [
                "adapter speed 5000"
            ],
            "postRestartCommands": [
                "monitor arm semihosting enable",
                "monitor arm semihosting_fileio enable"
            ],
            "postLaunchCommands": [
                "monitor arm semihosting enable",
                "monitor arm semihosting_fileio enable"
            ]
        }
    ]
}
