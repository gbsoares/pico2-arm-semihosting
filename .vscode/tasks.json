{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "preset",
            "description": "Select build preset",
            "default": "pico2",
            "type": "pickString",
            "options": [
                {
                    "label": "Pico 2 (RP2350)",
                    "value": "pico2"
                },
                {
                    "label": "Pico (RP2040)",
                    "value": "pico"
                },
                {
                    "label": "Host Examples",
                    "value": "host"
                },
                {
                    "label": "Tests",
                    "value": "heap_tests"
                }
            ]
        }
    ],
    "tasks": [
        // =======================================================================
        // Pico 2 (RP2350)
        // =======================================================================
        {
            "label": "Pico 2: Configure",
            "type": "shell",
            "command": "cmake",
            "args": ["--preset", "pico2"],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Pico 2: Build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "--preset", "pico2"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Pico 2: Configure + Build",
            "dependsOn": ["Pico 2: Configure", "Pico 2: Build"],
            "dependsOrder": "sequence",
            "group": "build",
            "problemMatcher": []
        },
        // =======================================================================
        // Pico (RP2040)
        // =======================================================================
        {
            "label": "Pico: Configure",
            "type": "shell",
            "command": "cmake",
            "args": ["--preset", "pico"],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Pico: Build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "--preset", "pico"],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Pico: Configure + Build",
            "dependsOn": ["Pico: Configure", "Pico: Build"],
            "dependsOrder": "sequence",
            "group": "build",
            "problemMatcher": []
        },
        // =======================================================================
        // Host Examples
        // =======================================================================
        {
            "label": "Host: Configure",
            "type": "shell",
            "command": "cmake",
            "args": ["--preset", "host"],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Host: Build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "--preset", "host"],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Host: Configure + Build",
            "dependsOn": ["Host: Configure", "Host: Build"],
            "dependsOrder": "sequence",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Host: Run heap_trace_host",
            "type": "shell",
            "command": "${workspaceFolder}/build/examples/host/heap_trace/heap_trace_host",
            "args": ["--trace-dir", "${workspaceFolder}/build/examples/host/heap_trace"],
            "dependsOn": "Host: Build",
            "group": "test",
            "problemMatcher": []
        },
        // =======================================================================
        // Tests
        // =======================================================================
        {
            "label": "Tests: Configure",
            "type": "shell",
            "command": "cmake",
            "args": ["--preset", "heap_tests"],
            "group": "test",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Tests: Build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "--preset", "heap_tests"],
            "group": "test",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Tests: Run",
            "type": "shell",
            "command": "ctest",
            "args": ["--preset", "heap_tests", "--output-on-failure"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Tests: Configure + Build + Run",
            "dependsOn": ["Tests: Configure", "Tests: Build", "Tests: Run"],
            "dependsOrder": "sequence",
            "group": "test",
            "problemMatcher": []
        },
        // =======================================================================
        // Generic (uses input picker)
        // =======================================================================
        {
            "label": "Configure (select preset)",
            "type": "shell",
            "command": "cmake",
            "args": ["--preset", "${input:preset}"],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build (select preset)",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "--preset", "${input:preset}"],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        // =======================================================================
        // Clean
        // =======================================================================
        {
            "label": "Clean: Remove all build directories",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "build"],
            "group": "build",
            "problemMatcher": []
        }
    ]
}
