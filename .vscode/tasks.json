{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "picoPlatform",
            "description": "Select the PICO_PLATFORM",
            "default": "rp2350",
            "type": "pickString",
            "options": [
                {
                    "label": "RP2350 (Pico 2)",
                    "value": "pico2"
                },
                {
                    "label": "RP2040 (Pico 1)",
                    "value": "pico"
                }
            ]
        },
        {
            "id": "buildTarget",
            "description": "Select the build target",
            "default": "all",
            "type": "pickString",
            "options": [
                {
                    "label": "All Targets",
                    "value": "all"
                },
                {
                    "label": "Hello World",
                    "value": "hello_world"
                },
                {
                    "label": "Heap Trace",
                    "value": "heap_trace"
                },
                {
                    "label": "Semihosting Library",
                    "value": "semihosting"
                }
            ]
        }
    ],
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--preset",
                "${input:picoPlatform}",
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "CMake Build Target",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "${input:buildTarget}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Full Build (Configure + Build Target)",
            "dependsOn": [
                "CMake Configure",
                "CMake Build Target"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "CMake Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "clean"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Clean All (Remove Build Directory)",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build All Targets",
            "type": "shell",
            "dependsOn": "CMake Configure",
            "command": "cmake",
            "args": [
                "--preset",
                "${input:picoPlatform}",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Tests: Configure (host)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--preset",
                "heap_tests"
            ],
            "group": "test",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Tests: Build",
            "type": "shell",
            "command": "cmake",
            "dependsOn": "Tests: Configure (host)",
            "args": [
                "--build",
                "--preset",
                "heap_tests"
            ],
            "group": "test",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Tests: Run",
            "type": "shell",
            "command": "ctest",
            "dependsOn": "Tests: Build",
            "args": [
                "--preset",
                "heap_tests"
            ],
            "group": "test",
            "problemMatcher": []
        }
    ]
}
