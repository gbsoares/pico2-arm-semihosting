{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "_root-config",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "_pico-root-config",
            "hidden": true,
            "inherits": [
                "_root-config"
            ],
            "cacheVariables": {
                "CFG_PLATFORM": "PICO"
            }
        },
        {
            "name": "pico",
            "displayName": "Raspberry Pi Pico",
            "description": "Configure for Raspberry Pi Pico platform (RP2040)",
            "inherits": [
                "_pico-root-config"
            ],
            "cacheVariables": {
                "PICO_PLATFORM": "rp2040",
                "PICO_BOARD": "pico"
            }
        },
        {
            "name": "pico2",
            "displayName": "Raspberry Pi Pico 2",
            "description": "Configure for Raspberry Pi Pico 2 platform (RP2350)",
            "inherits": [
                "_pico-root-config"
            ],
            "cacheVariables": {
                "PICO_PLATFORM": "rp2350-arm-s",
                "PICO_BOARD": "pico2"
            }
        },
        {
            "name": "heap_tests",
            "displayName": "Build Tests for Host",
            "binaryDir": "${sourceDir}/build/tests",
            "inherits": [
                "_root-config"
            ],
            "cacheVariables": {
                "CFG_BUILD_EXAMPLES": "OFF",
                "CFG_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "host",
            "displayName": "Host Examples",
            "description": "Build examples for host system (filesystem transport)",
            "inherits": [
                "_root-config"
            ],
            "cacheVariables": {
                "CFG_BUILD_EXAMPLES": "ON",
                "CFG_BUILD_TESTS": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "pico",
            "displayName": "Build Examples for Pico",
            "configurePreset": "pico",
            "targets": [
                "all"
            ]
        },
        {
            "name": "pico2",
            "displayName": "Build Examples for Pico 2",
            "configurePreset": "pico2",
            "targets": [
                "all"
            ]
        },
        {
            "name": "heap_tests",
            "displayName": "Build Tests for Host",
            "configurePreset": "heap_tests",
            "targets": [
                "heap_inst_tests"
            ]
        },
        {
            "name": "host",
            "displayName": "Build Examples for Host",
            "configurePreset": "host",
            "targets": [
                "all"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "heap_tests",
            "displayName": "Run Tests for Host",
            "configurePreset": "heap_tests",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
